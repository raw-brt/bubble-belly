    <div class="row">
      <div class="col" id="jumbotron-first-column">
        <p class="text-left my-4"><i class="fas fa-tape"></i>{{babySize}} cm.</p>
        <p class="text-left my-4"><i class="fas fa-baby"></i>{{babyWeight}} gr.</p>
      </div>
      <div class="col" id="jumbotron-second-column">
        <p class="text-left my-4"><i class="fas fa-circle-notch"></i>{{user.bellyDiameter}} cm.</p>
        <p class="text-left my-4"><i class="fas fa-weight"></i>{{user.weight}} gr.</p>
        <p class="text-left my-4"><i class="fas fa-baby"></i>{{user.babyAge}} weeks</p>
      </div>
    </div>
  </div>
</div>

