<form action="/login" method="POST" class="mb-3" autocomplete="off">
  <div class="form-group">
    <label for="email">email</label>
    <input name="email" type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
      placeholder="Enter email" value="{{ user.email }}">
    {{#if error.email}}
    <div class="invalid-feedback">
      {{error.email}}
    </div>
    {{/if}}
  </div>
  <div class="form-group">
    <label for="password">password</label>
    <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password"
      placeholder="password" value="{{ user.password }}">
    {{#if error.password}}
    <div class="invalid-feedback">
      {{error.password}}
    </div>
    {{/if}}
  </div>
  <button type="submit" class="btn btn-primary">
    Log in
  </button>
  {{!-- <a href="/auth/slack" class="btn btn-warning">Login With Slack</a> --}}
</form>
<a href="/users/new">Sign up</a>